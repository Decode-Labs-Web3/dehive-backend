{
  "name": "dehive-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:all": "nest build auth && nest build user-dehive-server && nest build server && nest build channel-messaging && nest build direct-messaging && nest build direct-calling && nest build channel-calling && nest build user-status",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:dev:auth": "nest start --watch auth",
    "start:dev:user-dehive-server": "nest start --watch user-dehive-server",
    "start:dev:server": "nest start --watch server",
    "start:dev:channel-messaging": "nest start --watch channel-messaging",
    "start:dev:direct-messaging": "nest start --watch direct-messaging",
    "start:dev:direct-calling": "nest start --watch direct-calling",
    "start:dev:channel-calling": "nest start --watch channel-calling",
    "start:dev:user-status": "nest start --watch user-status",
    "start:dev:api-gateway": "nest start --watch api-gateway",
    "start:dev:all": "npm run start:dev:auth & npm run start:dev:user-dehive-server & npm run start:dev:server & npm run start:dev:channel-messaging & npm run start:dev:direct-messaging & npm run start:dev:direct-calling & npm run start:dev:channel-calling & npm run start:dev:user-status",
    "start:all": "concurrently \"npm run start:dev:auth\" \"npm run start:dev:user-dehive-server\" \"npm run start:dev:server\" \"npm run start:dev:channel-messaging\" \"npm run start:dev:direct-messaging\" \"npm run start:dev:direct-calling\" \"npm run start:dev:channel-calling\" \"npm run start:dev:user-status\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "concurrently \"node dist/apps/auth/main.js\" \"node dist/apps/user-dehive-server/main.js\" \"node dist/apps/server/main.js\" \"node dist/apps/channel-messaging/main.js\" \"node dist/apps/direct-messaging/main.js\" \"node dist/apps/direct-calling/main.js\" \"node dist/apps/channel-calling/main.js\" \"node dist/apps/api-gateway/main.js\" \"node dist/apps/user-status/main.js\"",
    "start:prod:pm2": "pm2 start ecosystem.config.js",
    "stop:prod:pm2": "pm2 stop ecosystem.config.js",
    "restart:prod:pm2": "pm2 restart ecosystem.config.js",
    "delete:prod:pm2": "pm2 delete ecosystem.config.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/dehive-backend/test/jest-e2e.json",
    "kill:all": "pkill -f 'nest start' || true",
    "restart:all": "npm run kill:all && sleep 2 && npm run start:all",
    "setup": "npm install && npm run build",
    "setup:manual": "npm install && npm run build",
    "start:all:setup": "npm run setup && npm run start:all"
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/platform-ws": "^11.1.6",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/websockets": "^11.1.6",
    "@stream-io/node-sdk": "^0.7.11",
    "@stream-io/video-react-sdk": "^1.24.0",
    "axios": "^1.10.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "ethers": "^6.15.0",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "ioredis": "^5.6.1",
    "joi": "^18.0.1",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.17.0",
    "mongoose": "^8.15.1",
    "nanoid": "^3.3.11",
    "p-queue": "^6.6.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^8.3.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    }
  }
}

{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/auth/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/auth/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/auth",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "channel-messaging": {
      "type": "application",
      "root": "apps/channel-messaging",
      "entryFile": "main",
      "sourceRoot": "apps/channel-messaging/src",
      "compilerOptions": {
        "tsConfigPath": "apps/channel-messaging/tsconfig.app.json",
        "plugins": ["@nestjs/swagger"]
      }
    },
    "direct-messaging": {
      "type": "application",
      "root": "apps/direct-messaging",
      "entryFile": "main",
      "sourceRoot": "apps/direct-messaging/src",
      "compilerOptions": {
        "tsConfigPath": "apps/direct-messaging/tsconfig.app.json",
        "plugins": ["@nestjs/swagger"]
      }
    },
    "email-worker": {
      "type": "application",
      "root": "apps/email-worker",
      "entryFile": "main",
      "sourceRoot": "apps/email-worker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/email-worker/tsconfig.app.json"
      }
    },
    "server": {
      "type": "application",
      "root": "apps/server",
      "entryFile": "main",
      "sourceRoot": "apps/server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/server/tsconfig.app.json"
      }
    },
    "test-auth": {
      "type": "application",
      "root": "apps/test-auth",
      "entryFile": "main",
      "sourceRoot": "apps/test-auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/test-auth/tsconfig.app.json"
      }
    },
    "user-dehive-server": {
      "type": "application",
      "root": "apps/user-dehive-server",
      "entryFile": "main",
      "sourceRoot": "apps/user-dehive-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-dehive-server/tsconfig.app.json"
      }
    },
    "direct-calling": {
      "type": "application",
      "root": "apps/direct-calling",
      "entryFile": "main",
      "sourceRoot": "apps/direct-calling/src",
      "compilerOptions": {
        "tsConfigPath": "apps/direct-calling/tsconfig.app.json",
        "plugins": ["@nestjs/swagger"]
      }
    },
    "channel-calling": {
      "type": "application",
      "root": "apps/channel-calling",
      "entryFile": "main",
      "sourceRoot": "apps/channel-calling/src",
      "compilerOptions": {
        "tsConfigPath": "apps/channel-calling/tsconfig.app.json",
        "plugins": ["@nestjs/swagger"]
      }
    },
    "user-status": {
      "type": "application",
      "root": "apps/user-status",
      "entryFile": "main",
      "sourceRoot": "apps/user-status/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-status/tsconfig.app.json"
      }
    }
  }
}

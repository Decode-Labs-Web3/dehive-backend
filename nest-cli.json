{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/dehive-api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/dehive-api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/dehive-api-gateway",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "dehive-api-gateway": {
      "type": "application",
      "root": "apps/dehive-api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/dehive-api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/dehive-api-gateway/tsconfig.app.json"
      }
    }
  }
}